<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".feature.home.HomeActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/userNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MyTheme.Headline1"
                android:text="@string/userName"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/userNameTv"
                android:layout_marginTop="15dp"
                android:background="@drawable/background_white"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="20dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/buttons"
                    android:orientation="vertical"
                    android:layoutDirection="rtl"
                    android:gravity="top">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvConnection"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.MyTheme.Headline3"
                                android:text="@string/connection"
                                android:layout_centerHorizontal="true"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_check"
                                android:layout_below="@id/tvConnection"
                                android:layout_centerHorizontal="true"/>


                        </RelativeLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/blue"/>

                        <LinearLayout
                            android:id="@+id/creditBtn"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/credit"
                                android:textAppearance="@style/TextAppearance.MyTheme.Headline3" />


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">



                                <TextView
                                    android:id="@+id/creditTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/number1000"
                                    android:layout_marginEnd="5dp"
                                    android:textAppearance="@style/TextAppearance.MyTheme.Headline3" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/TextAppearance.MyTheme.Headline3"
                                    android:text="@string/toman"/>


                            </LinearLayout>




                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/blue"/>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.MyTheme.Headline3"
                                android:text="@string/rate"
                                android:layout_centerHorizontal="true"/>

                            <TextView
                                android:id="@+id/rateTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/rate"
                                android:layout_centerHorizontal="true"
                                android:text="@string/fiveHundred"
                                android:textAppearance="@style/TextAppearance.MyTheme.Headline3" />


                        </RelativeLayout>


                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/blue"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/travelRegistrationBtn"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:layout_height="wrap_content"
                            android:background="?selectableItemBackground"
                            android:focusable="true"
                            android:clickable="true"

                            >


                            <ImageView
                                android:id="@+id/imgAdd"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/add"
                                android:layout_centerHorizontal="true"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imgAdd"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:text="@string/addingTravel"
                                android:textColor="@color/blue"
                                android:textAppearance="@style/TextAppearance.MyTheme.Headline3" />


                        </RelativeLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/blue"/>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:layout_height="wrap_content"
                            android:background="?selectableItemBackground"
                            android:focusable="true"
                            android:clickable="true"
                            >


                            <ImageView
                                android:id="@+id/imgSeat"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/seat"
                                android:layout_centerHorizontal="true"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imgSeat"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:text="@string/addingTravel"
                                android:textColor="@color/blue"
                                android:textAppearance="@style/TextAppearance.MyTheme.Headline3" />


                        </RelativeLayout>


                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/blue"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <RelativeLayout
                            android:id="@+id/currentTravelBtn"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:layout_height="wrap_content"
                            android:background="?selectableItemBackground"
                            android:focusable="true"
                            android:clickable="true"
                            >


                            <ImageView
                                android:id="@+id/imgCurrentTravel"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/traveling"
                                android:layout_centerHorizontal="true"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imgCurrentTravel"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:text="@string/currentTravel"
                                android:textColor="@color/blue"
                                android:textAppearance="@style/TextAppearance.MyTheme.Headline3" />


                        </RelativeLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/blue"/>

                        <RelativeLayout
                            android:id="@+id/declinedPassengersBtn"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:layout_height="wrap_content"
                            android:background="?selectableItemBackground"
                            android:focusable="true"
                            android:clickable="true"
                            >


                            <ImageView
                                android:id="@+id/imgSad"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/sad" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imgSad"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:text="@string/declinedPassengers"
                                android:textColor="@color/blue"
                                android:textAppearance="@style/TextAppearance.MyTheme.Headline3" />


                        </RelativeLayout>



                    </LinearLayout>



                </LinearLayout>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/activationTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_above="@id/buttons">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.MyTheme.Headline3"
                        android:text="@string/beActiveForGetTravels"
                        android:layout_gravity="center"
                        android:layout_marginVertical="10dp"/>

                </com.google.android.material.card.MaterialCardView>


                <FrameLayout
                    android:id="@+id/buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/deActiveBtn"
                        android:visibility="gone"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="150dp"
                        android:layout_height="56dp"
                        android:layout_marginVertical="10dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:minHeight="48dp"
                        android:text="@string/deactive"
                        android:textColor="@color/black"
                        app:cornerRadius="20dp"
                        app:strokeColor="@color/orange"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/activeBtn"
                        android:layout_width="150dp"
                        android:layout_height="56dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="10dp"
                        android:gravity="center"
                        android:minHeight="48dp"
                        android:text="@string/active"
                        app:cornerRadius="20dp" />


                </FrameLayout>


            </RelativeLayout>








        </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>