<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    tools:context=".feature.home.credit.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/userNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/userName"
            android:textAppearance="@style/TextAppearance.MyTheme.Headline1" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/userNameTv"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/background_white"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/buttons"
                android:gravity="top"
                android:layoutDirection="rtl"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/tvConnection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="@string/connection"
                            android:textAppearance="@style/TextAppearance.MyTheme.Headline3" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvConnection"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_check" />


                    </RelativeLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/blue" />

                    <LinearLayout
                        android:id="@+id/creditBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/credit"
                            android:textAppearance="@style/TextAppearance.MyTheme.Headline3" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/creditTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:text="@string/number1000"
                                android:textAppearance="@style/TextAppearance.MyTheme.Headline3" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/toman"
                                android:textAppearance="@style/TextAppearance.MyTheme.Headline3" />


                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/blue" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="@string/rate"
                            android:textAppearance="@style/TextAppearance.MyTheme.Headline3" />

                        <TextView
                            android:id="@+id/rateTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rate"
                            android:layout_centerHorizontal="true"
                            android:text="@string/fiveHundred"
                            android:textAppearance="@style/TextAppearance.MyTheme.Headline3" />


                    </RelativeLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/blue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/travelRegistrationBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="10dp"

                        >


                        <ImageView
                            android:id="@+id/imgAdd"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/add" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgAdd"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="@string/addingTravel"
                            android:textAppearance="@style/TextAppearance.MyTheme.Headline3"
                            android:textColor="@color/blue" />


                    </RelativeLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/blue" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="10dp">


                        <FrameLayout
                            android:id="@+id/rl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true">

                            <ImageView
                                android:id="@+id/imgSeat"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/seat" />


                            <TextView
                                android:id="@+id/emptySeatsTv"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="bottom|start"
                                android:background="@drawable/background_empty_seats_count"
                                android:gravity="center"
                                android:text="1"
                                android:textAppearance="@style/TextAppearance.MyTheme.Headline1"
                                android:visibility="gone" />


                        </FrameLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rl"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="@string/seatsCount"
                            android:textAppearance="@style/TextAppearance.MyTheme.Headline3"
                            android:textColor="@color/blue" />


                    </RelativeLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/blue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:id="@+id/currentTravelBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="10dp">


                        <ImageView
                            android:id="@+id/imgCurrentTravel"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/traveling" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgCurrentTravel"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="@string/currentTravel"
                            android:textAppearance="@style/TextAppearance.MyTheme.Headline3"
                            android:textColor="@color/blue" />


                    </RelativeLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/blue" />

                    <RelativeLayout
                        android:id="@+id/declinedPassengersBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="10dp">

                        <FrameLayout
                            android:id="@+id/fl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true">

                            <ImageView
                                android:id="@+id/imgSad"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/sad" />

                            <TextView
                                android:id="@+id/declinedPassengersTv"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="bottom|start"
                                android:background="@drawable/background_declined_passengers_count"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.MyTheme.Headline1"
                                android:visibility="gone" />


                        </FrameLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/fl"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="@string/declinedPassengers"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.MyTheme.Headline3"
                            android:textColor="@color/blue" />


                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/activationTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/buttons"
                android:layout_marginHorizontal="30dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="1dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="10dp"
                    android:text="@string/beActiveForGetTravels"
                    android:textAppearance="@style/TextAppearance.MyTheme.Headline3" />

            </com.google.android.material.card.MaterialCardView>


            <FrameLayout
                android:id="@+id/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layoutDirection="rtl"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/deActiveBtn"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="150dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="10dp"
                    android:gravity="center"
                    android:minHeight="48dp"
                    android:text="@string/deactive"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    app:cornerRadius="20dp"
                    app:strokeColor="@color/orange" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/activeBtn"
                    android:layout_width="150dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="10dp"
                    android:gravity="center"
                    android:minHeight="48dp"
                    android:text="@string/active"
                    app:cornerRadius="20dp" />


            </FrameLayout>


        </RelativeLayout>



    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>